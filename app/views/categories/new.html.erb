<h1 align="center">Create New Category</h1>
<br/>

<%= render 'shared/errors', obj: @category %>

<%= form_for(@category, :html => {class:'form-horizontal', role:'form'}) do |f| %>

    <!-- USER NAME -->
    <div class="form-group">
      <div class="col-sm-2">
        <%= f.label :name %>
      </div>
      <div class="col-sm-10">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Category Name' %>
      </div>
    </div>

    <!-- SUBMIT -->
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <%= f.submit class: 'btn btn-danger btn-lg' %>
        <%= link_to 'Back', root_path, class: 'btn btn-default btn-lg' %>
      </div>
    </div>

<% end %>
