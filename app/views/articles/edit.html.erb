<h2>Edit Existing Article</h2>

<% if @article.errors.any? %>
    <h2> Following errors preventing article from being edited</h2>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
<% end %>

<%= form_for @article do |f| %>

    <p>
      <%= f.label :tile %>
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %>
      <%= f.text_area :description %>
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>