<h1 class="section-title">All articles</h1>


<% @articles.each do |article| %>

    <div class="row">
      <div class="col-xs-12">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to article.title, article_path(article) %>
          </div>
          <div class="article-contents-truncated">
            <%= truncate(article.description, length: 100) %>
          </div>

          <div class="article-actions">
            <%= link_to 'Edit', edit_article_path(article), class: "btn btn-danger" %>
            <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Really delete article #{article.title}"}, class: "btn btn-danger" %>
            <%= link_to 'View', article_path(article), class: "btn btn-default" %>
          </div>

        </div>
      </div>
    </div>


<% end %>


<% if false %>
<%= link_to 'Create New', new_article_path, class: "btn btn-danger" %>
<table>
  <thead>
    <tr>
      <td>Title</td>
      <td>Description</td>
      <td>Created at</td>
      <td>Updated at</td>
    </tr>
  </thead>
  <tbody>


    <% @articles.each do |article| %>
      <tr>
          <td><%= article.title %></td>
          <td><%= article.description %></td>
          <td><%= article.created_at %></td>
          <td><%= article.updated_at %></td>
          <td><%= link_to 'View', article_path(article) %></td>
          <td><%= link_to 'Edit', edit_article_path(article) %></td>
          <td><%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Really delete article #{article.title}"} %></td>
      </tr>
    <% end %>
  </tbody>


</table>

<% end %>